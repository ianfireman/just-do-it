<div ng-app="justdoit">
  <div class="container">
    <div class="row">
        
        <div class="card headCard">
            <div class="card-content">
                <h1 class="text-center" style="color:#fff">Just do it</h1>
            </div>
        </div>
        
        
        <!-- Menu Lateral -->
        <div class="col-sm-3">
            <div class="card mainCard">
                <div class="card-content">
                    <h3 class="text-center">Categorias</h3>
                </div>
                
                <div class="card-action">
                    <div class="list-group">
                        <button type="button" class="list-group-item">Todas as tarefas<span class="badge">14</span></button>
                        <button type="button" class="list-group-item">Para hoje <span class="badge">3</span></button>
                        <button type="button" class="list-group-item">Para depois <span class="badge">11</span></button>
                    </div>
                    <!--  
                    <div style="text-align: center;">
                        <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span> Nova categoria</button>
                    </div>
                    -->
                </div>
            </div>
            
           
            <div class="card mainCard">
                <div class="card-content">
                    <div class="input-group">
                        <input type="text" class="form-control input-lg" placeholder="Buscar" />
                        <span class="input-group-btn">
                            <button class="btn btn-info btn-lg" type="button">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
            
        <!-- Content -->
        <div class="col-sm-9">
            <div class="col-md-6 col-md-offset-1">
              <div class="view-container">
                <div class="card mainCard">
                  
                  <div class="card-content">
                    <h3 class="text-center">Tarefas</h3>
                  </div>
                  
                  <div ng-view class="view-frame animate-view">
                  </div>
                  
                </div>
              </div>
            </div>
        </div>
        
    </div>
  </div>
</div>